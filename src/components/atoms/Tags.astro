---
import { getPermalink } from '~/utils/permalinks';

const { tags, class: className = 'text-base text-bold my-0' } = Astro.props;
---

{
	tags && Array.isArray(tags) && (
		<ul class={className}>
			{tags.map((tag) => (
				<li class="inline-block mr-2 mb-2 mt-0 py-0.5 px-2 text-white bg-gray-800">{tag}</li>
			))}
		</ul>
	)
}
