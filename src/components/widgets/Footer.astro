---
import { Icon } from 'astro-icon';

const social = [
	{ label: 'Twitter', icon: 'tabler:brand-linkedin', href: '#' },
	{ label: 'Github', icon: 'tabler:brand-github', href: 'https://github.com/bysergr/minimal_sergr' },
	{ label: 'Email', icon: 'tabler:mail', href: 'mailto:reysergio383@gmail.com' },
];
---

<footer>
	<div class="flex items-center justify-center py-6 md:py-8">
		<ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0">
			{
				social.map(({ label, href, icon }) => (
					<li>
						<a
							class="text-gray-500 dark:text-gray-400  dark:hover:text-white transition duration-150 ease-in-out rounded-lg text-sm p-2.5 inline-flex items-center"
							aria-label={label}
							href={href}
							target="_blank"
						>
							<Icon name={icon} class="w-5 h-5" />
						</a>
					</li>
				))
			}
		</ul>
	</div>
</footer>
